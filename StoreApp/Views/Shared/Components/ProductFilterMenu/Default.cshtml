<div class="my-3">
    <h6 class="lead">
        <i class="fa fa-filter text-secondary"></i>
        Filters
    </h6>
</div>

<div class="my-2">
    <form method="get" asp-action="Index">
        <input type="hidden" name="categoryId" value="@(Context.Request.Query["categoryId"])"/>
        <div class="form-group my-2">
            <input name="SearchTerm" placeholder="Search" class="form-control" />
        </div>
        <div class="form-group my-2">
            <input name="MinPrice" placeholder="Min. Price" class="form-control" />
        </div>
        <div class="form-group my-2">
            <input name="MaxPrice" placeholder="Max. Price" class="form-control" />
        </div>

        <div class="form-group my-2">
            <button type="submit" class="btn btn-sm btn-primary">
                Filter
            </button>
        </div>
    </form>
</div>