@model ProductDtoForUpdate

<div class="text-center">
    <div class="display-6">Ürün Düzenle</div>
</div>

<form method="post" asp-action="Update">

    <div class="text-danger" asp-validation-summary="All"></div>

    <input type="hidden" asp-for="ProductId" />
    
    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-items="@ViewBag.Categories" asp-for="CategoryId"></select>
    </div>

    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" placeholder= />
    </div>

    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" placeholder= />
    </div>

    <div class="form-group my-3">
        <div class="btn-group">
            <button type="submit" class="btn btn-primary"><i class="fa-solid fa-floppy-disk"></i> Güncelle</button>
            <a asp-action="Index" class="btn btn-outline-primary"><i class="fa-solid fa-list"></i> Ürünler</a>
        </div>
    </div>
</form>