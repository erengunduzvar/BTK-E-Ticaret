@model IEnumerable<Product>

<div class="text-center">
    <div class="display-6">Ürünler</div>
</div>

    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create"> <i class="fa fa-plus"></i> Ürün Ekle</a>
    </div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Product Name</th>
            <th scope="col">Price</th>
            <th scope="col">Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <th scope="row">@product.ProductId</th>
                <td>@product.ProductName</td>
                <td>@product.Price.ToString("c")</td>
                <td width="25%">
                    <div role="group" class="btn-group">
                        <a class="btn btn-warning" asp-action="Update" asp-route-id="@product.ProductId"><i class="fa-solid fa-pen-to-square"></i> Düzenle</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@product.ProductId"><i class="fa-solid fa-trash"></i> Sil</a>
                        <a class="btn btn-info" target="_blank" asp-area="" asp-controller="Product" asp-action="Get" asp-route-id="@product.ProductId"><i class="fa-solid fa-magnifying-glass"></i> İncele</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

