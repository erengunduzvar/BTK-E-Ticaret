@model Product

<div class="row">
    <div class="col-md-12">
        <div class="text-center">
            <h6 class="display-6">
                @Model.ProductName
            </h6>

            <img class="img-fluid shadow rounded-3 p-5 my-3" src="@Model?.ImageUrl" alt="@Model?.ProductName" />

            <p class="lead" >@Model.Price.ToString("c")</p>
        </div>
    </div>
</div>

<div class="text-center">
        
        <form id="@Model.ProductId" asp-page="/cart" method="post">

            <input type="hidden" asp-for="ProductId" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

        <div class="btn-group">
            <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index"> <i class="fa-solid fa-house"></i> Ana Sayfa</a>

            <button type="submit" class="btn btn-outline-secondary">
                <i class="fa-solid fa-cart-plus rounded-0"></i>
                Sepete Ekle
            </button>

            <a class="btn btn-outline-secondary" asp-controller="Product" asp-action="Index"> <i class="fa-solid fa-list"></i> Ürünlere Dön</a>
        </div>
            
            </form>

        
</div>

@section Header{
    <div>
        Header for only Get
    </div>
}